@model AlbumForCreatingDto
@{
  ViewData["Title"] = "AddNew";
}

<div class="alert alert-success">
  Adding New Album
</div>
<div class="container-fluid">
  <form asp-action="AddNewAlbum">
    <div class="form-group">
      <label asp-for="Name">Album Name *</label>
      <input asp-for="Name"
             class="form-control"
             aria-describedby="albumName"
             placeholder="Enter Album Name">
      <small class="text-danger">
        <span asp-validation-for="Name"></span>
      </small>
    </div>
    <div class="form-group">
      <label asp-for="Description">Album Description</label>
      <textarea asp-for="Description"
                class="form-control"
                aria-describedby="descriptionName"
                placeholder="Enter Description Name">
      </textarea>
      <small class="text-danger">
        <span asp-validation-for="Description"></span>
      </small>
    </div>
    <button type="submit" class="btn btn-success px-5">Save</button>
    <a asp-action="Index" class="btn btn-danger px-5">Cancel</a>
  </form>
</div>